@model PFD_Team3.Models.User

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Menu.cshtml";
}


<style>
    body {
        font-family: Arial;
        font-size: 14px;
    }

    .input {
        color: black;
    }

    .ch {
        color: white;
    }

    .cc {
        color: white;
    }

    .text {
        color: black;
    }

    .PageTitle {
        background-color: #151e3d;
        color: lavender;
    }

    button {
        font-weight: 500;
        font-size: 16px;
        text-decoration: none;
    }

    button {
        margin-left: 10px;
        padding: 9px 25px;
        background-color: #d4af37;
        /*background-color: rgba(195, 7, 63, 1);*/
        /*background: radial-gradient(ellipse farthest-corner at right bottom, #FEDB37 0%, #FDB931 8%, #9f7928 30%, #8A6E2F 40%, transparent 80%), radial-gradient(ellipse farthest-corner at left top, #FFFFFF 0%, #FFFFAC 8%, #D1B464 25%, #5d4a1f 62.5%, #5d4a1f 100%);*/
        border: none;
        border-radius: 50px;
        cursor: pointer;
        color: #000000;
        transition: all 0.3s ease 0s;
    }
</style>


<form asp-action="Edit">
    <h4 class="PageTitle">Edit Your Record</h4>
    <fieldset class="FormContent">
        <div class="form-group row">
            <label asp-for="UserID"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="UserID" readonly
                       class="form-control-plaintext" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="UserName"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="UserName" readonly
                       class="form-control-plaintext" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"
                      class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Password"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"
                      class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Save"
                       class="btn btn-primary" />
            </div>
        </div>
    </fieldset>
</form>


